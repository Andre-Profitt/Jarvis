#!/usr/bin/env python3
"""
JARVIS - Ultimate 10/10 Launcher
Just run: ./jarvis
"""

import subprocess
import sys
import os
from pathlib import Path

# Check if setup has been run
if not Path("venv").exists():
    print("ðŸš€ First time setup required...")
    print("Running setup (this will only take 2 minutes)...")
    subprocess.run(["./setup_10_seamless.sh"], check=True)
    print("\nSetup complete! Starting JARVIS...\n")

# Activate virtual environment and run JARVIS 10/10
activate_script = "venv/bin/activate"
if Path(activate_script).exists():
    # Run in the virtual environment
    python_executable = "venv/bin/python3"
    jarvis_script = "jarvis_10_seamless.py"
    
    if Path(jarvis_script).exists():
        subprocess.run([python_executable, jarvis_script] + sys.argv[1:])
    else:
        # Fallback to basic version
        subprocess.run([python_executable, "jarvis.py"] + sys.argv[1:])
else:
    # Direct run
    subprocess.run([sys.executable, "jarvis_10_seamless.py"] + sys.argv[1:])