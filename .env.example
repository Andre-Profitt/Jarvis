# JARVIS Environment Configuration Template
# Copy this file to .env and fill in your actual values

# API Keys (Required for multi-AI integration)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# WebSocket Configuration
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8765
WEBSOCKET_SSL_CERT=
WEBSOCKET_SSL_KEY=

# Security Keys (Generate strong random values)
JWT_SECRET=generate_a_long_random_string_here
ENCRYPTION_KEY=generate_another_random_string_here

# Database Configuration
DATABASE_URL=postgresql://jarvis:password@localhost:5432/jarvis_db
# Alternative: SQLite for development
# DATABASE_URL=sqlite:///jarvis.db

# Model Paths
MODEL_PATH=./models
TRAINING_DATA_PATH=./training_data
LOG_PATH=./logs

# Feature Flags
ENABLE_VOICE=true
ENABLE_SWARM=true
ENABLE_LEARNING=true
ENABLE_MULTI_DEVICE=true

# Development Settings
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=development

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false

# Claude Desktop MCP (No API key needed with x200 subscription)
CLAUDE_MCP_ENABLED=true
CLAUDE_DESKTOP_PATH=/Applications/Claude.app

# Ollama Configuration (for local models)
OLLAMA_HOST=http://localhost:11434

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Memory Limits
MAX_MEMORY_MB=4096
MAX_CONTEXT_TOKENS=8192